                    <!--<Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <StackPanel HorizontalAlignment="Left">
                    -->
                    <!--  Các phần tử con của WrapPanel sẽ tự chuyển dòng khi không đủ không gian chiều ngang  -->
                    <!--
                            <StackPanel Margin="5,5,0,0" Orientation="Horizontal">
                                <TextBlock
                                    Width="110"
                                    VerticalAlignment="Center"
